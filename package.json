{
  "name": "grok-desktop",
  "version": "2.2.0",
  "description": "A Web App Wrapper for X/Grok",
  "repository": "https://github.com/Ash-Bash/Grok-Desktop-Wrapper",
  "main": "src/app.js",
  "author": {
    "name": "Ashley Chapman",
    "email": "xpsx.fan@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "prebuild": "rimraf dists",
    "build": "npm run prebuild && electron-builder",
    "clean": "rimraf dists"
  },
  "build": {
    "forceCodeSigning": false,
    "appId": "com.ashleychapman.wrapper.grokdesktop",
    "productName": "Grok Desktop",
    "icon": "./assets/GrokDesktop_DS_Icon.ico",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./assets/GrokDesktop_DS_512_Icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    
    "linux": {
      "maintainer": "Ashley Chapman <xpsx.fan@gmail.com>",
      "icon": "./assets/GrokDesktop_DS_256_Icon.png",
      "category": "Network;ArtificialIntelligence;",
      "synopsis": "Grok Desktop - Web wrapper for Grok/X",
      "description": "A desktop wrapper application for Grok (by xAI) and X.com",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ],
      "asarUnpack": ["**/*.node", "**/*.so"],
      "executableName": "grok-desktop"
    },
    "directories": {
      "output": "./dists"
    },
    "publish": {
      "provider": "github",
      "owner": "Ash-Bash",
      "repo": "https://github.com/Ash-Bash/Grok-Desktop-Wrapper"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./assets/GrokDesktop_DS_Icon.ico",
      "uninstallerIcon": "./assets/GrokDesktop_DS_Icon.ico",
      "uninstallDisplayName": "Uninstall Grok Desktop",
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "grok",
    "elon",
    "x",
    "musk",
    "app",
    "electron"
  ],
  "author": "Ashley James Chapman",
  "email": "example@example.com",
  "license": "GNU",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-packager": "^17.1.2",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "electron-context-menu": "^4.1.1",
    "jquery": "^3.7.1"
  },
  "overrides": {
    "tar": "^7.5.3",
    "node-tar": "^7.5.3",
    "tmp": "^0.2.4",
    "@electron/node-gyp": {
      "make-fetch-happen": {
        "cacache": {
          "tar": "^7.5.3"
        }
      }
    },
    "@inquirer/editor": {
      "external-editor": {
        "tmp": "^0.2.4"
      }
    }
  }
}
